{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "single_file_console_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileBasename}",
                "Page.cpp",
                "Customer.cpp",
                "Vegetable.cpp",
                "Menu.cpp",
                "Fruit.cpp",
                "Meat.cpp",
                "Bill.cpp",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "single_file_graphic_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "multi_file_console_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "-o",
                "${workspaceFolderBasename}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "multi_file_graphic_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "*.cpp",
                "-o",
                "${workspaceFolderBasename}",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:/MinGW/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}